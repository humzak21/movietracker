{
  "name": "movie-tracker-fullstack",
  "version": "1.0.0",
  "description": "Full-stack Movie Tracker with React frontend and Node.js backend",
  "main": "backend/server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "vite",
    "dev:backend": "cd backend && npm run dev",
    "build": "vite build",
    "build:backend": "cd backend && npm ci --only=production",
    "start": "node backend/server.js",
    "start:production": "npm run build && npm run build:backend && cross-env NODE_ENV=production npm run start",
    "preview": "vite preview",
    "install:backend": "cd backend && npm install"
  },
  "dependencies": {
    "@anatoliygatt/dark-mode-toggle": "^1.0.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@supabase/supabase-js": "^2.49.8",
    "chart.js": "^4.4.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "date-fns": "^4.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "framer-motion": "^12.15.0",
    "helmet": "^7.1.0",
    "lucide-react": "^0.511.0",
    "morgan": "^1.10.0",
    "motion": "^12.14.0",
    "multer": "^2.0.0",
    "node-fetch": "^3.3.2",
    "rate-limiter-flexible": "^5.0.5",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.6.1",
    "react-slick": "^0.30.3",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.2",
    "vite": "^6.0.0"
  }
}
